    <org.osmdroid.views.MapView
        android:id="@+id/map"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/horGuideline95"
        app:layout_constraintTop_toTopOf="@id/horGuideline10" />

    <LinearLayout
        android:id="@+id/menu_linear"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/verGuideline87"

        app:layout_constraintTop_toBottomOf="@id/horGuideline20">

        <ImageView
            android:id="@+id/subway"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/tramway" />

        <ImageView
            android:id="@+id/bus_3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/bus_3" />

        <ImageView
            android:id="@+id/bus_3bis"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/bus_3" />

        <ImageView
            android:id="@+id/bus_11"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/bus_11" />

        <ImageView
            android:id="@+id/bus_16"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/bus_16" />

        <ImageView
            android:id="@+id/bus_17"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/bus_17" />

        <ImageView
            android:id="@+id/bus_22"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/bus_22" />

        <ImageView
            android:id="@+id/bus_25"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/bus_25" />

        <ImageView
            android:id="@+id/bus_27"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/bus_27" />

    </LinearLayout>

    <ImageView
        android:id="@+id/currentPosition"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/current"
        app:layout_constraintBottom_toTopOf="@+id/horGuideline90"
        app:layout_constraintStart_toStartOf="@+id/verGuideline75" />

    <ImageView
        android:id="@+id/reset"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/reset"
        app:layout_constraintBottom_toTopOf="@+id/horGuideline80"
        app:layout_constraintStart_toStartOf="@+id/verGuideline75" />

    <ImageView
        android:id="@+id/walk"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/walk"
        app:layout_constraintBottom_toTopOf="@+id/horGuideline90"
        app:layout_constraintStart_toStartOf="@+id/verGuideline30" />

    <ImageView
        android:id="@+id/car"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/car"
        app:layout_constraintBottom_toTopOf="@+id/horGuideline90"
        app:layout_constraintStart_toStartOf="@+id/verGuideline10" />



    <ImageView
        android:id="@+id/arrow_down"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/down"
        app:layout_constraintBottom_toTopOf="@id/horGuideline20"
        app:layout_constraintStart_toStartOf="@id/verGuideline75" />

    <ImageView
        android:id="@+id/arrow_up"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/up"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/horGuideline20"
        app:layout_constraintStart_toStartOf="@id/verGuideline75" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horGuideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.01" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horGuideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horGuideline20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horGuideline30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horGuideline40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horGuideline50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horGuideline60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horGuideline70"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horGuideline80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.80" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horGuideline90"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.90" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horGuideline95"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verGuideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verGuideline30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25"
        />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verGuideline75"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verGuideline87"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.87" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verGuideline95"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

</androidx.constraintlayout.widget.ConstraintLayout>